<div class="container">
    <h4 class="center">Add a story</h4>
   
    <form method="post" action="/post/add" class="col s10">
    <div class="row">
        <div class="input-field">
            <input type="text" name="title" id="title">
            <label for="title">Title</label>
        </div>
    </div>
    <div class="row">
         <label>Status</label>
  <p>
     
    <span>
      <label>
        <input name="status" type="radio" value="public" checked />
        <span>Public</span>
      </label>
    </span>
    <span class="ml-2">
      <label>
        <input name="status" type="radio" value="private" />
        <span>Private</span>
      </label>
    </span>
    </p>
    </div>
    <div class="row">
        <div class="input-field">
            <h5>Tell Us Your Stroy:</h5>
            <textarea id="body" name="body"></textarea>
        </div>
    </div>
    <div class="row">
        <input type="submit" value="Save" class="btn">
        <a href="/dashboard" class="btn orange">Cancle</a>
    </div>
    </form>
     {{#if error}}
    <p class="red-text center">{{error}}</p>
    {{/if}}

</div>