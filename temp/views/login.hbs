<div class="container login-container">
    <div class="card">
        <div class="card-content">

            <h3><i class="fas fa-users"></i>Login</h3>

            <div class="row">
                <form class="col s12" action="/account/login" method="post">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" type="email" class="validate" name="email">
                            <label for="email"> <i class="fas fa-envelope-square"></i></label>
                            <span class="helper-text" data-error="wrong" data-success="right">Please fill your
                                email</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" type="password" class="validate" name="password">
                            <label for="password"><i class="fas fa-low-vision"></i></label>
                            <span class="helper-text" data-error="wrong" data-success="right">Please fill your
                                password</span>
                        </div>
                    </div>

                    <input class="btn waves-effect waves-light col s12" type="submit" name="action" value="Login">
               <br><br>
               <p>Token expires Send confirmation email Again</p>
              <input class="btn waves-effect waves-light col s12" type="submit" name="action" value="Send Email">
                </form>
            </div>
           
            <p>I have no account <a href="/account/register">Register..</a></p>
              
                     
             {{#if error}}
                <p class="red-text center">{{error}}</p>
                {{/if}}
              {{#if success}}
                <p class="green-text center">{{success}}</p>
                {{/if}}
        </div>
    </div>
</div>